{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true
  }
}