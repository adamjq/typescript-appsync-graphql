{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["./typings"],
    "lib": [
      "es2015"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
  },
  "include": [
    "src"
  ],
  "exclude": ["src/tests"]
}