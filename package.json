{
  "name": "messages-graphql-api",
  "version": "1.0.0",
  "description": "Messages GraphQL API with Typescript and AWS AppSync.",
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test*.ts"
    ]
  },
  "keywords": [
    "node",
    "typescript",
    "lambda"
  ],
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.15",
    "@types/bunyan": "^1.8.6",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.0",
    "aws-sdk": "^2.451.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "bunyan": "^1.8.12"
  }
}
